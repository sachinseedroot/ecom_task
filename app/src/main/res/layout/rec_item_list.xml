<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:id="@+id/rec_parent_rel"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rec_item_imageview"
        android:layout_width="60dp"
        android:scaleType="centerCrop"
        android:layout_height="60dp" />

    <TextView
        android:layout_toRightOf="@+id/rec_item_imageview"
        android:id="@+id/rec_item_title"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <TextView
        android:layout_toRightOf="@+id/rec_item_imageview"
        android:layout_below="@+id/rec_item_title"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:id="@+id/rec_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"/>

    <View
        android:layout_below="@+id/rec_item_imageview"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linesep"/>
</RelativeLayout>